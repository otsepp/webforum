
<table style="width: 100%">
	<thead>
		<th style="width: 300px;"><strong>Categories</strong></th>
		<th><strong>Subjects</strong></th>
		<th><strong>Messages</strong></th>
		<th><strong>Last message</strong></th>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
      			<tr>
        			<td style="text-align: left;"><%= link_to category.name, category %></td>
				<td style="text-align: center;"><%= category.subjects.count %></td>
				<td style="text-align: center;"><%= category.messages.count %></td>
				<td style="text-align: center;"><%= category.last_message %></td>
      			</tr>
   		 <% end %>
	</tbody>

</table>

<br>

<% if current_user && current_user.admin %>
	<%= link_to 'New Category', new_category_path %>
<% end %>
