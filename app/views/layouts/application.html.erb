<!DOCTYPE html>
<html>
<head>
  <title>Webforum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= stylesheet_link_tag 'colors' %>

<div class="navibar" >
	<div class="navibar-logo">
		<%= link_to image_tag(asset_path("webforum-logo.png")), :root%>
	</div>

	<br>
	
	<div class="navibar-user-control-top" type="navibar-user-control">
		<% if current_user %>
			<%= link_to current_user.username, current_user %> signed in
		<% else %>
			<%= link_to "sign in", signin_path(:return_url => request.url) %>
		<% end %>
	</div>
	<div class="navibar-user-control-bottom" type="navibar-user-control">
		<% if current_user %>
			<%= link_to "sign out", signout_path %>
		<% else %>
			<%= link_to "sign up", signup_path %>
		<% end %>
	</div>

</div>

<p id="notice" class="notice"><%= notice %></p>

<div class="content">
	<%= yield %>
</div>

</body>
</html>
