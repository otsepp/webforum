<p id="notice"><%= notice %></p>

<h1>
<%= link_to "Categories", categories_path %> > 
<%= link_to @subject.category.name, @subject.category %> > 
<%= @subject.name %> 
</h1>

<% if !@first_message.nil? %>
	<p>
		<strong> OP: </strong>
		<%= "#{@first_message.content}, t. " %>
		<%= link_to @first_message.user.username, @first_message.user %> 
	</p>
	<ul>
		<% @rest_of_messages.each do |message| %>
			<p> <%= "#{message.content}, t. " %> 
			<%= link_to message.user.username, message.user %> </p>
		<% end %>
	</ul>
<% end %>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>
